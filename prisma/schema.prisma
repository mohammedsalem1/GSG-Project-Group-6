generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//////////////////////
// ENUMS
//////////////////////

enum Role {
  USER
  ADMIN
}


enum Availability {
  WEEKENDS
  MORNING
  EVENING
  FLEXIBLE
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  EXPERT
}

enum BadgeCategory {
  ACHIEVEMENT
  MILESTONE
  SPECIAL
}

enum NotificationType {
  SWAP_REQUEST
  SWAP_ACCEPTED
  SWAP_REJECTED
  MESSAGE
  SESSION_REMINDER
  REVIEW_REQUEST
  BADGE_UNLOCKED
  SYSTEM
}

enum Rating {
  ONE
  TWO
  THREE
  FOUR
  FIVE
}

enum SwapStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
  COMPLETED
  CANCELLED
}

enum MessageType {
  TEXT
  IMAGE
  FILE
}

enum CommunicationType {
  TEXT_CHAT
  VIDEO_CALL
  VOICE_CALL
}

enum SessionStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  RESCHEDULED
}

enum PointType {
  EARNED
  SPENT
  BONUS
}

enum TokenType {
  REFRESH_TOKEN
}

//////////////////////
// MODELS
//////////////////////

model User {
  id            String        @id @default(uuid())
  userName      String        @unique
  email         String        @unique
  password      String
  phoneNumber   String?
  role          Role          @default(USER)
  bio           String?
  image         String?
  country       String?
  location      String?
  timezone      String        @default("UTC")
  availability  Availability?
  isActive      Boolean       @default(true)
  isVerified    Boolean       @default(false)
  otpCode       String? 
  otpSendAt     DateTime?      @default(now())
  selectedCatIds String?  @default("")

  skills        UserSkill[]
  sentSwaps     SwapRequest[] @relation("Requester")
  receivedSwaps SwapRequest[] @relation("Receiver")
  messagesSent  Message[]     @relation("Sender")
  messagesRecv  Message[]     @relation("Receiver")
  badges        UserBadge[]
  points        Point[]
  tokens        UserToken[]
  notifications Notification[]
  hostedSessions   Session[]  @relation("Host")
  attendedSessions Session[]  @relation("Attendee")
  conversationsAsUser1 Conversation[] @relation("ConversationUser1")
  conversationsAsUser2 Conversation[] @relation("ConversationUser2")
  reviewsGiven Review[] @relation("Reviewer")
  reviewsReceived Review[] @relation("Reviewed")


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Category {
  id          String   @id @default(uuid())
  name        String
  description String?
  icon        String?
  isActive    Boolean  @default(true)

  skills Skill[]

  createdAt DateTime @default(now())

  @@map("categories")
}

model Skill {
  id          String   @id @default(uuid())
  name        String
  description String?
  isActive    Boolean  @default(true)

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String
   
  language   String    @default("English")
  users UserSkill[]
  sessions Session[]

  createdAt DateTime @default(now())

  @@map("skills")
}

model UserSkill {
  id                String      @id @default(uuid())
  user              User        @relation(fields: [userId], references: [id])
  userId            String
  skill             Skill       @relation(fields: [skillId], references: [id])
  skillId           String
  level             SkillLevel  @default(BEGINNER)
  yearsOfExperience Int?
  isOffering        Boolean

  offeredInSwapRequests SwapRequest[] @relation("OfferedSkill")
  requestedInSwapRequests SwapRequest[] @relation("RequestedSkill")

  reviews   Review[]


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, skillId])
  @@map("user_skills")
}

model SwapRequest {
  id                   String     @id @default(uuid())
  requester             User       @relation("Requester", fields: [requesterId], references: [id])
  requesterId           String
  receiver              User       @relation("Receiver", fields: [receiverId], references: [id])
  receiverId            String
  offeredUserSkill      UserSkill  @relation("OfferedSkill", fields: [offeredUserSkillId], references: [id])
  offeredUserSkillId    String
  requestedUserSkill    UserSkill  @relation("RequestedSkill", fields: [requestedUserSkillId], references: [id])
  requestedUserSkillId  String

  status        SwapStatus @default(PENDING)
  rejectionReason String?
  expiresAt     DateTime
  tracking      Json?

  conversation Conversation?
  session      Session?
  reviews      Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("swap_requests")
}

model Conversation {
  id            String       @id @default(uuid())
  user1         User         @relation("ConversationUser1", fields: [user1Id], references: [id])
  user1Id       String
  user2         User         @relation("ConversationUser2", fields: [user2Id], references: [id])
  user2Id       String
  swapRequest   SwapRequest? @relation(fields: [swapRequestId], references: [id])
  swapRequestId String?      @unique
  isArchived    Boolean      @default(false)

  messages Message[]

  session Session?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("conversations")
}

model Message {
  id             String      @id @default(uuid())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String
  sender         User        @relation("Sender", fields: [senderId], references: [id])
  senderId       String
  receiver       User        @relation("Receiver", fields: [receiverId], references: [id])
  receiverId     String
  content        String
  type           MessageType @default(TEXT)
  fileUrl        String?
  isRead         Boolean     @default(false)
  readAt         DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("messages")
}

model Session {
  id              String           @id @default(uuid())
  swapRequest     SwapRequest      @relation(fields: [swapRequestId], references: [id])
  swapRequestId   String           @unique
  conversation    Conversation     @relation(fields: [conversationId], references: [id])
  conversationId String           @unique
  host            User             @relation("Host", fields: [hostId], references: [id])
  hostId          String
  attendee        User             @relation("Attendee", fields: [attendeeId], references: [id])
  attendeeId      String
  skill           Skill?           @relation(fields: [skillId], references: [id])
  skillId         String?
  title           String
  description     String
  scheduledAt     DateTime
  endsAt          DateTime
  duration        Int
  communication   CommunicationType
  virtualLink     String?
  status          SessionStatus
  reminderSent   Boolean @default(false)
  notes           String?
  hostJoinedAt    DateTime?
  attendeeJoinedAt DateTime?
  

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sessions")
}

model Review {
  id                   String  @id @default(uuid())
  swapRequest          SwapRequest @relation(fields: [swapRequestId], references: [id])
  swapRequestId        String
  reviewer             User    @relation("Reviewer", fields: [reviewerId], references: [id])
  reviewerId           String
  reviewed             User    @relation("Reviewed", fields: [reviewedId], references: [id])

  userSkillId      String
  userSkill            UserSkill @relation(fields: [userSkillId], references: [id])

  reviewedId           String
  overallRating        Rating
  communicationRating  Rating?
  punctualityRating    Rating
  comment              String?
  isVerified           Boolean @default(true)
  isFlagged            Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("reviews")

}

model Badge {
  id          String         @id @default(uuid())
  name        String
  description String
  icon        String
  category    BadgeCategory
  requirement String
  points      Int            @default(0)
  isActive    Boolean        @default(true)

  users UserBadge[]

  createdAt DateTime @default(now())

  @@map("badges")
}

model UserBadge {
  id         String  @id @default(uuid())
  user       User    @relation(fields: [userId], references: [id])
  userId     String
  badge      Badge  @relation(fields: [badgeId], references: [id])
  badgeId    String
  isPinned   Boolean @default(false)
  unlockedAt DateTime

  createdAt DateTime @default(now())

  @@unique([userId, badgeId])
  @@map("user_badges")
}

model Notification {
  id        String           @id @default(uuid())
  user      User             @relation(fields: [userId], references: [id])
  userId    String
  type      NotificationType
  title     String
  message   String
  data      Json?
  isRead    Boolean          @default(false)
  readAt    DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("notifications")
}

model Point {
  id        String     @id @default(uuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  amount    Int
  reason    String
  type      PointType

  createdAt DateTime @default(now())

  @@map("points")
}

model UserToken {
  id         String    @id @default(uuid())
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  token      String      @db.Text
  expiresAt  DateTime
  type       TokenType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_tokens")
}
