# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="mysql://root:root@localhost:3306/skillswap_dev"

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-refresh-secret-change-this-also-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

#OTP Secrets
OTP_EXPIRES_IN=300
# Email (Mailtrap for development - sign up at mailtrap.io)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USER=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_FROM=noreply@skillswap.com

# Cloudinary (sign up at cloudinary.com for free)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Redis (for caching - optional for now)
REDIS_HOST=localhost
REDIS_PORT=6379
